  "definitions": {
    "sessionMsg": {
      "title": "sessionMsg",
      "description": "TSS WhatsApp GW APIs to send sessions message. Messages can be sent are: text, text with preview URL, media image, media document, media audio, media video, media location",
      "type": "object",
      "properties": {
        "txnId": {
          "description": "Source Transaction Identifier",
          "type": "string",
          "minLength": 1,
          "maxLength": 30
        },
        "number": {
          "description": "Mobile Number",
          "example": "919876543210",
          "type": "string",
          "minLength": 5,
          "maxLength": 20,
          "pattern": "^[0-9]+"
        },
        "req_type": {
          "$ref": "#/definitions/ReqType"
        },
        "req_mode": {
          "$ref": "#/definitions/ReqMode"
        },
        "file_name": {
          "description": "Bulk File upload link",
          "type": "string"
        },
        "media": {
          "$ref": "#/definitions/Media"
        }
      },
      "required": [
        "number",
        "req_type",
        "req_mode"
      ]
    },
    "GenericResponse": {
      "title": "GenericResponse",
      "description": "Generic API Response",
      "type": "object",
      "properties": {
        "refId": {
          "description": "Internally Generated Unique Reference Identifier",
          "type": "string"
        },
        "txnId": {
          "description": "Source Transaction Identifier",
          "type": "string",
          "minLength": 1,
          "maxLength": 30
        },
        "status": {
          "$ref": "#/definitions/Status"
        },
        "description": {
          "description": "Description(s) for Error Code",
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "error": {
          "description": "Failure Error Codes",
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "refId",
        "status"
      ]
    },
    "templateMsg": {
      "title": "templateMsg",
      "description": "TSS WhatsApp GW API for sending template message",
      "type": "object",
      "properties": {
        "txnid": {
          "description": "Source Transaction Identifier",
          "type": "string",
          "minLength": 1,
          "maxLength": 30
        },
        "number": {
          "description": "Mobile Number",
          "example": "919876543210",
          "type": "string",
          "minLength": 5,
          "maxLength": 20,
          "pattern": "^[0-9]+"
        },
        "type": {
          "description": "Media Type - template",
          "example": "template",
          "type": "string",
          "default": "template"
        },
        "media": {
          "$ref": "#/definitions/Media1"
        }
      },
      "required": [
        "number",
        "type",
        "media"
      ]
    },
    "statusResponse": {
      "title": "statusResponse",
      "type": "object",
      "properties": {
        "refId": {
          "description": "Internally Generated Unique Reference Identifier",
          "type": "string",
          "minLength": 1,
          "maxLength": 30
        },
        "txnid": {
          "description": "Source Transaction Identifier",
          "type": "string",
          "minLength": 1,
          "maxLength": 30
        },
        "number": {
          "description": "Mobile Number with Country Code",
          "example": "919876543210",
          "type": "string",
          "minLength": 5,
          "maxLength": 20,
          "pattern": "^[0-9]+"
        },
        "sent_time": {
          "description": "Timestamp in YYYY-MM-DD HH24:MI:SS when message is received",
          "example": "2010-05-21 05:42:00",
          "type": "string",
          "format": "date-time"
        },
        "delivery_time": {
          "description": "Timestamp in YYYY-MM-DD HH24:MI:SS when message is delivered",
          "example": "2010-05-21 05:42:00",
          "type": "string",
          "format": "date-time"
        },
        "msg_status": {
          "$ref": "#/definitions/MsgStatus"
        },
        "error_code": {
          "description": "Error code in case of failure",
          "type": "string"
        },
        "description": {
          "description": "Error Code Description",
          "type": "string"
        }
      },
      "required": [
        "number"
      ]
    },
    "Document": {
      "title": "Document",
      "type": "object",
      "properties": {
        "link": {
          "description": "Complete link to the file",
          "type": "string"
        }
      }
    },
    "Image": {
      "title": "Image",
      "type": "object",
      "properties": {
        "link": {
          "description": "Complete link to the file",
          "type": "string"
        }
      }
    },
    "Media": {
      "title": "Media",
      "type": "object",
      "properties": {
        "msg": {
          "description": "Text Message",
          "type": "string",
          "minLength": 1,
          "maxLength": 5012
        },
        "preview_url": {
          "description": "Enable Preview URL for WhatsApp",
          "example": false,
          "type": "boolean",
          "default": false
        },
        "link": {
          "description": "Complete link to the file",
          "type": "string"
        },
        "file": {
          "description": "sample .pdf file name",
          "type": "string",
          "minLength": 1
        },
        "caption": {
          "description": "sample text",
          "type": "string",
          "minLength": 1
        },
        "longitude": {
          "description": "example: 72.838249",
          "type": "string",
          "minLength": 1
        },
        "latitude": {
          "description": "example: 18.991341",
          "type": "string",
          "minLength": 1
        },
        "name": {
          "description": "Location Name",
          "type": "string",
          "minLength": 1
        },
        "address": {
          "description": "Location Address",
          "type": "string",
          "minLength": 1
        }
      }
    },
    "Media1": {
      "title": "Media1",
      "type": "object",
      "properties": {
        "name": {
          "description": "Template Name",
          "type": "string"
        },
        "header": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/templateHeader"
          },
          "uniqueItems": true,
          "minItems": 1
        },
        "body": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/templateBody"
          }
        }
      },
      "required": [
        "name",
        "header",
        "body"
      ]
    },
    "MsgStatus": {
      "title": "MsgStatus",
      "description": "Satus of the message-ACCEPTED|REJECTED|SENT|DELIVERED|READ",
      "type": "string",
      "enum": [
        "ACCEPTED",
        "SENT",
        "DELIVERED",
        "READ",
        "REJECTED"
      ]
    },
    "OptinRequest": {
      "title": "OptinRequest",
      "type": "object",
      "properties": {
        "txnid": {
          "description": "Source Transaction Identifier",
          "type": "string",
          "minLength": 1,
          "maxLength": 30
        },
        "number": {
          "description": "Mobile Number with Country Code",
          "example": "919876543210",
          "type": "string",
          "minLength": 5,
          "maxLength": 20,
          "pattern": "^[0-9]+"
        }
      },
      "required": [
        "number"
      ]
    },
    "OptoutRequest": {
      "title": "OptoutRequest",
      "type": "object",
      "properties": {
        "txnid": {
          "description": "Source Transaction Identifier",
          "type": "string",
          "minLength": 1,
          "maxLength": 30
        },
        "number": {
          "description": "Mobile Number with Country Code",
          "example": "919876543210",
          "type": "string",
          "minLength": 5,
          "maxLength": 20,
          "pattern": "^[0-9]+"
        }
      }
    },
    "ReqMode": {
      "title": "ReqMode",
      "description": "Single ot Bulk",
      "type": "string",
      "enum": [
        "single",
        "bulk"
      ]
    },
    "ReqType": {
      "title": "ReqType",
      "description": "Media Type to be sent. It can be text|document|audio|video|image|location",
      "type": "string",
      "enum": [
        "image",
        "document",
        "audio",
        "video",
        "location",
        "text"
      ]
    },
    "Status": {
      "title": "Status",
      "description": "Status of the Request",
      "type": "string",
      "enum": [
        "SUCCESS",
        "FAILURE",
        "IN_PROGRESS",
        "TIMEOUT"
      ]
    },
    "StatusRequest": {
      "title": "StatusRequest",
      "type": "object",
      "properties": {
        "refId": {
          "description": "Internally Generated Unique Reference Identifier",
          "type": "string",
          "minLength": 1,
          "maxLength": 30
        },
        "txnid": {
          "description": "Source Transaction Identifier",
          "type": "string",
          "minLength": 1,
          "maxLength": 30
        },
        "number": {
          "description": "Mobile Number with Country Code",
          "example": "919876543210",
          "type": "string",
          "minLength": 5,
          "maxLength": 20,
          "pattern": "^[0-9]+"
        }
      },
      "required": [
        "number"
      ]
    },
    "templateBody": {
      "title": "templateBody",
      "type": "object",
      "properties": {
        "text": {
          "description": "Placeholder Text",
          "type": "string"
        }
      }
    },
    "templateHeader": {
      "title": "templateHeader",
      "type": "object",
      "properties": {
        "video": {
          "$ref": "#/definitions/Video"
        },
        "document": {
          "$ref": "#/definitions/Document"
        },
        "image": {
          "$ref": "#/definitions/Image"
        }
      }
    },
    "Video": {
      "title": "Video",
      "type": "object",
      "properties": {
        "link": {
          "description": "Complete link to the file",
          "type": "string"
        }
      }
    }
  },
  "tags": [
    {
      "name": "WhatsApp"
    }
  ]
}